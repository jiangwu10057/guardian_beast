{
    "name": "jiangwu10057/guardian_beast",
    "description": "swoole的守护进程",
    "type": "library",
    "config": {
        "platform": {
            "php": "7.0.12"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    },
    "require": {
        "swoole/ide-helper": "^4.4"
    },
    "require-dev": {
        "phan/phan": "^1.3",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": ">=3.4",
        "mockery/mockery": "^1.2.0",
        "zircote/swagger-php": "^3.0.1"
    },
    "autoload": {
        "psr-4": {},
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "cs-fix": "php-cs-fixer fix $1",
        "analyze": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "test": [
            "./vendor/bin/phpstan analyze",
            "./vendor/phpunit/phpunit/phpunit  --no-coverage"
        ],
        "test_cover": "./vendor/phpunit/phpunit/phpunit",
        "build:doc": "./vendor/bin/openapi -o dist/api.yml -e vendor --format yaml --debug ."
    },
    "license": "MulanPSL",
    "authors": [
        {
            "name": "jiangwu10057",
            "email": "jiangwu10057@qq.com"
        }
    ],
    "minimum-stability": "stable"
}