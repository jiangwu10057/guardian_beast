{
    "name": "jiangwu10057/guardian_beast",
    "description": "swoole实现守护进程",
    "type": "library",
    "config": {
        "platform": {
            "php": "7.2.10",
            "ext-pcntl": "7.2.10"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    },
    "require": {
        "swoole/ide-helper": "^4.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.2",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": ">=3.4"
    },
    "autoload": {
        "psr-4": {
            "GuardianBeast\\": "src/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "cs-fix": "php-cs-fixer fix $1",
        "analyze": "./vendor/bin/phpstan analyze analyse --memory-limit 300M -l 0 -c phpstan.neon ./src",
        "test": [
            "./vendor/bin/phpstan analyze --autoload-file=./vendor/autoload.php ./src",
            "./vendor/phpunit/phpunit/phpunit  --no-coverage"
        ],
        "test_cover": "./vendor/phpunit/phpunit/phpunit"
    },
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "jiangwu10057",
            "email": "jiangwu10057@qq.com"
        }
    ],
    "minimum-stability": "stable"
}